<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uz.hamroev.toshkentshaharxotirakitob">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_xotira_kitob"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_xotira_kitob"
        android:supportsRtl="true"
        android:theme="@style/Theme.ToshkentShaharXotiraKitob">
        <activity
            android:name=".activity.PersonsActivity"
            android:exported="true" />
        <activity
            android:name=".activity.HomeActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ToshkentShaharXotiraKitob.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>